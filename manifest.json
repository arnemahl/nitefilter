{
  "manifest_version": 2,

  "name": "Nitefilter",
  "description": "Make bright websites more comfortable in low light environments.",
  "version": "0.1.0.1",

  "background": {
    "scripts": ["main.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "16": "icon/16x16.png",
      "24": "icon/24x24.png",
      "32": "icon/32x32.png"
    },
    "default_title": "Enable Nitefilter"
  },
  "icons": {
    "16": "icon/16x16.png",
    "48": "icon/48x48.png",
    "128": "icon/128x128.png"
  },
  "permissions": [
    "activeTab"
  ]
}
