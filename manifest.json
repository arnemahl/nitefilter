{
  "manifest_version": 2,

  "name": "Nitefilter",
  "description": "Make bright websites more comfortable in low light environments.",
  "version": "0.1.0.1",

  "background": {
    "scripts": ["main.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Enable Nitefilter"
  },
  "permissions": [
    "activeTab"
  ]
}